<UserControl x:Class="Horsesoft.Horsify.SearchModule.UserControls.ucRandomSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Horsesoft.Horsify.SearchModule.UserControls"
             xmlns:horsify="http://schemas/horsesoft.co.uk"
             mc:Ignorable="d" 
             Opacity="0.9"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{DynamicResource BackgroundGradient3}">

        <Grid>
            <TextBlock HorizontalAlignment="Center" FontSize="44" Text="Random Select Songs"/>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <horsify:AmountSelectControl x:Name="AmountControl" Grid.Row="0" TextElement.FontSize="42"  
                                             HorizontalAlignment="Center" 
                                             Background="Transparent"                                             
                                             ShowLargerIncrementButtons="False"/>

            <horsify:RatingRangeControl Grid.Row="1" x:Name="RangeControl" StarWidth="50"/>

            <Button Grid.Row="2" FontSize="48" 
                Width="85"
                Height="65"
                Style="{DynamicResource ButtonQueueMetal}" 
                Click="GetRandomButton_Click"                                                                                 
                IsEnabled="True"                        
                        />

            <horsify:ButtonWithLabel Grid.Row="3" 
                                     Click="BackButton_Click"
                                     MaxHeight="110" MaxWidth="70"
                                     HorizontalAlignment="Center"                                                                          
                                     Content="{Binding Source={StaticResource Icon_ArrowLeft}}"                                     
                                     BorderThickness="0"
                        />
        </Grid>
    </Grid>

</UserControl>
