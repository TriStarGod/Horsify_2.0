<UserControl x:Class="Horsesoft.Horsify.DjHorsify.Views.SavedSearchFiltersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.Resources>
        <Style x:Key="SavedFilterStyle" TargetType="ListViewItem">
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" TextElement.FontSize="24">
                            <Button Content="Load" Command="{Binding ElementName=LayoutRoot, Path=DataContext.LoadSavedFilterCommand}" Margin="3"/>
                            <Button Content="Search" Command="{Binding ElementName=LayoutRoot, Path=DataContext.SearchFilterCommand}" Margin="3"/>
                            <TextBlock Text="{Binding Name}" Margin="3"/>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border x:Name="LayoutRoot" CornerRadius="55,55,55,55"
            Background="{DynamicResource BackgroundGradient3}">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="SAVED DJ HORSIFY FILTERS"
                   FontSize="32"
                   />
                <Button Content="Back" 
                        Command="{Binding ExitViewCommand}"/>
            </StackPanel>

            <ListView Grid.Row="1"
                Margin="20"
                SelectedItem="{Binding SelectedFilter}"
                ItemsSource="{Binding SavedFilters}" ItemContainerStyle="{StaticResource SavedFilterStyle}">

            </ListView>
        </Grid>
        
    </Border>
    
</UserControl>
